<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/ddeb48cbe9.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <li><%= link_to root_path do %><i class="fas fa-book"></i> Bookers<% end %></li>
        <li><%= link_to user_path(current_user) do %><i class="fas fa-home"></i> Home<% end %></li>
        <li><%= link_to users_path do %><i class="fas fa-users"></i> Users<% end %></li>
        <li><%= link_to books_path do %><i class="fas fa-book-open"></i> Books<% end %></li>
        <li><%= link_to destroy_user_session_path, method: :delete do %><i class="fas fa-sign-out-alt"></i> Log out<% end %></li>
      <% else %>
        <li><%= link_to root_path do %><i class="fas fa-book"></i> Bookers<% end %></li>
        <li><%= link_to root_path do %><i class="fas fa-home"></i> Home<% end %></li>
        <li><%= link_to '/home/about' do %><i class="fas fa-link"></i> About<% end %></li>
        <li><%= link_to new_user_registration_path do %><i class="fas fa-user-plus"></i> Sign up<% end %></li>
        <li><%= link_to new_user_session_path do %><i class="fas fa-sign-in-alt"></i> Log in<% end %></li>
      <% end %>
    </header>

    <% flash.each do |key, message| %>
      <% next if key.to_s == "errors" %>  
      <div class="alert alert-<%= key == "notice" ? "success" : "danger" %>">
        <%= message %>
      </div>
    <% end %>
    
    <%# ★ 詳細エラーはここだけで表示（1か所だけ） %>
    <% if (errs = (flash.now[:errors] || flash[:errors])).present? %>
      <% errs = Array(errs) %>
      <div class="alert alert-danger">
        <h4><%= pluralize(errs.size, "error") %> prohibited this action:</h4>
        <ul class="mb-0">
          <% errs.each do |msg| %><li><%= msg %></li><% end %>
        </ul>
      </div>
    <% end %>

    <main>
      <div class="container">
        <div class ="row">            
          <%= yield %>
        </div>
      </div>
    </main>

    <footer>
      <p>CopyRight infratop.inc</p>
    </footer>
  </body>
</html>
