<aside class="col-md-3 mb-4">
  <%= render "users/info", user: @user %>
  <%= render "books/form", book: @new_book %>
</aside>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(@user) do %>
              <%= image_tag @user.get_profile_image(60, 60), size: "60x60", alt: @user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book.title, book_path(book) %>  <!-- book の show へ -->
          </td>
          <td><%= simple_format(book.body) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>