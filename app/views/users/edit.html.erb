<h1>User info</h1>

<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h2>
    <ul class="mb-0">
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user do |f| %>
  <div class="mb-3">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :profile_image, "Image" %>
    <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file" %>
  </div>

  <div class="mb-3">
    <%= f.label :introduction, "Introduction" %>
    <%= f.text_area :introduction, rows: 5, class: "form-control" %>
  </div>

  <%= f.submit "Update User", class: "btn btn-primary" %>
<% end %>