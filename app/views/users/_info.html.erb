<!-- ログイン中ユーザー情報（共通） -->
<div class="user-info mb-4">
    <h2 class="h2 mb-3">User info</h2>

    <div class="mb-3">
      <%= image_tag user.get_profile_image(120, 120), alt: "avatar", size: "120x120" %>
    </div>

    <table class="table table-sm">
      <tr><th>name</th><td><%= user.name %></td></tr>
      <% if user.respond_to?(:introduction) %>
        <tr><th>introduction</th><td><%= user.introduction %></td></tr>
      <% end %>
    </table>

    <%= link_to raw('<i class="fas fa-user-cog"></i>'),
            edit_user_path(user),
            class: "btn btn-outline-secondary btn-block" %>
</div>