<!-- app/views/books/_form.html.erb -->

<h3>New book</h3>
<%= form_with model: book, url: books_path do |f| %>
  <div>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body, "Opinion" %>
    <%= f.text_area :body %>
  </div>
  <%= f.submit "Create Book" %>
<% end %>